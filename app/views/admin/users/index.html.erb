<h1>ユーザー一覧（Admin）</h1>

<%= link_to "新規登録（仮）", new_user_path, class: "btn btn-primary" %>

<div class="mb-3"></div>
<table class="table table-hover">
  <thead class="thead-default">
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:admin) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? "あり" : "なし" %></td>
        <td><%= link_to "削除", admin_user_path(user), method: :delete, data: { confirm: "「#{user.name}を削除します。よろしいですか？」" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>